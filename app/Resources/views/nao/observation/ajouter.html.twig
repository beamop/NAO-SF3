    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places&key={{ google_maps_api_key }}"></script>
    <script src="{{ asset('scripts/vendor/pugxautocompleter/autocompleter-jqueryui.js') }}"></script>
    <script src="{{ asset('scripts/dropzone.js') }}"></script>

    <script>
        $(document).ready(function() {
            function initialize() {
                var input = document.getElementById('observation_adresse');
                new google.maps.places.Autocomplete(input);
            }

            google.maps.event.addDomListener(window, 'load', initialize);

            function getPosition() {
                // Simple wrapper
                return new Promise((res, rej) => {
                    navigator.geolocation.getCurrentPosition(res, rej);
            });
            }

            async function setPosition() {
                var position = await getPosition();
                document.getElementById('observation_adresse').value = [position.coords.latitude, position.coords.longitude];
            }

            $('#observation_bird').autocompleter({
                url_list: '{{ path('bird.search') }}',
                url_get: '{{ path('bird.search.id') }}'
            });

            if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
                setPosition()
            }
        });
    </script>
