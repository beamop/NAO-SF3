{% extends 'base-admin.html.twig' %}

{% block content %}
    <!-- Content
	================================================== -->
    <div class="dashboard-content">

        <!-- Titlebar -->
        <div id="titlebar">
            <div class="row">
                <div class="col-md-12">
                    {% if observationsOnHold|length > 0 %}
                        <h2>Commentaires en attente de validation</h2>
                    {% else %}
                        <h2>Tous les commentaires en attente ont été validées!</h2>
                    {% endif %}
                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="{{ path('nao_admin') }}">Gestion</a></li>
                            <li><a href="#">Commentaires en attente de validation</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row">

            <!-- Listings -->
            <div class="col-lg-12 col-md-12">

                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="notification success closeable">
                        <p><span>Super!</span> {{ flash_message }}</p>
                        <a class="close" href="#"></a>
                    </div>

                    <br>
                {% endfor %}

                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="notification error closeable">
                        <p><span>Erreur!</span> {{ flash_message }}</p>
                        <a class="close" href="#"></a>
                    </div>

                    <br>
                {% endfor %}

                <div class="dashboard-list-box margin-top-0">

                    <ul>

                        {% for comment in commentsOnHold %}
                            <li class="approved-booking">
                                <div class="list-box-listing bookings">
                                    <div class="list-box-listing-content">
                                        <div class="inner">
                                            <h3>{{ comment.pseudo }}</h3>

                                            <div class="inner-booking-list">
                                                <h5>Date du commentaire:</h5>
                                                <ul class="booking-list">
                                                    <li class="highlighted">{{ comment.createdAt|date('d/m/Y') }}</li>
                                                </ul>
                                            </div>

                                            <div class="inner-booking-list">
                                                <h5>Statut:</h5>
                                                <ul class="booking-list">
                                                    <li class="highlighted">{{ comment.statusText }}</li>
                                                </ul>
                                            </div>

                                            <div class="inner-booking-list">
                                                <blockquote>{{ comment.content }}</blockquote>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="buttons-to-right">
                                    <a href="{{ path('admin_comment_status', {'id':comment.id, 'status':constant('AppBundle\\Entity\\Comment::REJECTED')}) }}" class="button gray reject"><i class="sl sl-icon-close"></i> Supprimer</a>
                                    <a href="{{ path('admin_comment_status', {'id':comment.id, 'status':constant('AppBundle\\Entity\\Comment::PUBLISHED')}) }}" class="button gray approve"><i class="sl sl-icon-check"></i> Valider</a>
                                </div>
                            </li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}