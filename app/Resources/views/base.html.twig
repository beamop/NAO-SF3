<!DOCTYPE html>
<head>

    <!-- Basic Page Needs
    ================================================== -->
    <title>{% block title %}NAO (Nos Amis les Oiseaux){% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    {% stylesheets filter='uglifycss, cssrewrite'
        'css/style.css'
        'css/colors/brown.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
    {% block stylesheets %}{% endblock %}

</head>

<body>

<!-- Wrapper -->
<div id="wrapper">

    <!-- Header Container
    ================================================== -->
    <header id="header-container">

        <!-- Header -->
        <div id="header">
            <div class="container">

                <!-- Left Side Content -->
                <div class="left-side">

                    <!-- Logo -->
                    <div id="logo">
                        <a href="/"><img src="{{ asset('images/logo.png') }}" alt=""></a>
                    </div>

                    <!-- Mobile Navigation -->
                    <div class="mmenu-trigger">
                        <button class="hamburger hamburger--collapse" type="button">
						<span class="hamburger-box">
							<span class="hamburger-inner"></span>
						</span>
                        </button>
                    </div>

                    <!-- Main Navigation -->
                    <nav id="navigation" class="style-1">
                        <ul id="responsive">

                            <li>
                                <a class="current" href="{{ path('nao_accueil') }}">Accueil</a>
                            </li>


                            <li>
                                <a href="{{ path('nao_liste_observation') }}">Observer</a>
                            </li>

                            {% if app.user %}
                                <li>
                                    <a href="{{ path('nao_profile') }}">Profil</a>
                                </li>
                            {% endif %}

                            <li>
                                <a href="{{ path('nao_blog') }}">Blog</a>
                            </li>

                            <li>
                                <a href="{{ path('nao_apropos') }}">À propos</a>
                            </li>

                            <li>
                                <a href="{{ path('nao_contact') }}">Contact</a>
                            </li>

                        </ul>
                    </nav>
                    <div class="clearfix"></div>
                    <!-- Main Navigation / End -->

                </div>
                <!-- Left Side Content / End -->


                <!-- Right Side Content / End -->
                <div class="right-side">
                    <div class="header-widget">
                        {% if is_granted(['ROLE_PARTICULIER']) %}
                            <a href="{{ path('fos_user_security_logout') }}" class="sign-in"><i class="sl sl-icon-login"></i> Se déconnecter</a>
                        {% else %}
                            <a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim"><i class="sl sl-icon-login"></i> Se connecter</a>
                        {% endif %}
                        <a href="{{ path('nao_ajouter_observation') }}" class="button border with-icon">Ajouter une observation <i class="sl sl-icon-plus"></i></a>
                    </div>
                </div>
                <!-- Right Side Content / End -->

                <!-- Sign In Popup -->
                <div id="sign-in-dialog" class="zoom-anim-dialog mfp-hide">

                    <div class="small-dialog-header">
                        <h3>Se connecter</h3>
                    </div>

                    <!--Tabs -->
                    <div class="sign-in-form style-1">

                        <ul class="tabs-nav">
                            <li class=""><a href="#tab1">Connexion</a></li>
                        </ul>

                        <div class="tabs-container alt">

                            <!-- Login -->
                            <div class="tab-content" id="tab1" style="display: none;">
                                <form action="{{ path("fos_user_security_check") }}" method="post">
                                    <input type="hidden" name="_csrf_token" value="{{ render(controller('AppBundle:Nao:getToken')) }}" />

                                    <p class="form-row form-row-wide">
                                        <label for="username">Nom d'utilisateur ou e-mail
                                            <i class="im im-icon-Male"></i>
                                            <input type="text" class="form-control" id="username" name="_username" required="required" autocomplete="username" />
                                        </label>
                                    </p>

                                    <p class="form-row form-row-wide">
                                        <label for="password">Mot de passe
                                            <i class="im im-icon-Lock-2"></i>
                                            <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
                                        </label>
                                        <span class="lost_password">
                                        <a href="{{ path('fos_user_registration_register') }}" >Vous n'avez pas de compte ?</a>
                                    </span>
                                    </p>

                                    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Se connecter" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Sign In Popup / End -->

            </div>
        </div>
        <!-- Header / End -->

    </header>
    <div class="clearfix"></div>
    <!-- Header Container / End -->

    {% block content %}
    {% endblock %}

    <!-- Footer
    ================================================== -->
    <div id="footer" >
        <!-- Main -->
        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-6">
                    <img class="footer-logo" src="{{ asset('images/logo.png') }}" alt="">
                    <br><br>
                    <p>
                        Notre association Nos Amis les Oiseaux a pour but de permettre à des passionnés d’ornithologie de partager leurs observations, d’échanger au sein d’une communauté et de participer à un projet d’études d’envergure nationale.
                    </p>
                </div>

                <div class="col-md-4 col-sm-6 ">
                    <h4>Liens utiles</h4>
                    <ul class="footer-links">
                        {% if app.user %}
                            <li>
                                <a href="{{ path('nao_blog') }}">Blog</a>
                            </li>
                            <li>
                                <a href="{{ path('nao_liste_observation') }}">Observations</a>
                            </li>
                            <li>
                                <a href="{{ path('nao_contact') }}">Contact</a>
                            </li>
                        {% else %}
                            <li>
                                <a href="#sign-in-dialog" class="sign-in popup-with-zoom-anim">Connexion</a>
                            </li>
                            <li>
                                <a href="{{ path('fos_user_registration_register') }}">Inscription</a>
                            </li>
                            <li>
                                <a href="{{ path('nao_blog') }}">Blog</a>
                            </li>
                            <li>
                                <a href="{{ path('nao_liste_observation') }}">Observations</a>
                            </li>
                            <li>
                                <a href="{{ path('nao_contact') }}">Contact</a>
                            </li>
                        {% endif %}
                    </ul>

                    <div class="clearfix"></div>
                </div>

                <div class="col-md-3  col-sm-12">
                    <h4>NAO (Nos Amis les Oiseaux)</h4>
                    <div class="text-widget">
                        <span><a href="#">contact@nao-association.com</a></span>
                    </div>

                    <ul class="social-icons margin-top-20">
                        <li><a class="facebook" href="https://www.facebook.com/nao.asso"><i class="icon-facebook"></i></a></li>
                        <li><a class="twitter" href="https://twitter.com/nao_asso"><i class="icon-twitter"></i></a></li>
                    </ul>

                </div>

            </div>

            <!-- Copyright -->
            <div class="row">
                <div class="col-md-12">
                    <div class="copyrights">© {{ "now"|date('Y') }} NAO (Nos Amis les Oiseaux). Tous droits réservés. - <a href="{{ path('nao_mentions_legales') }}">Mentions légales</a></div>
                </div>
            </div>

        </div>

    </div>
    <!-- Footer / End -->


    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>


</div>
<!-- Wrapper / End -->

<!-- Cookie Law -->
<script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js"></script>

<script>
    window.addEventListener("load", function(){
        window.cookieconsent.initialise({
            "palette": {
                "popup": {
                    "background": "#f7f7f7"
                },
                "button": {
                    "background": "transparent",
                    "text": "#784e3d",
                    "border": "#784e3d"
                }
            },
            "content": {
                "message": "Ce site utilise des cookies pour vous offrir le meilleur service. En poursuivant votre navigation, vous acceptez l’utilisation des cookies.",
                "dismiss": "J'accepte",
                "link": "En savoir plus",
                "href": "https://www.cnil.fr/fr/cookies-traceurs-que-dit-la-loi"
            }
        })});
</script>

<!-- Scripts
================================================== -->
{% javascripts filter='uglifyjs2'
    'scripts/jquery-2.2.0.min.js'
    'scripts/mmenu.min.js'
    'scripts/chosen.min.js'
    'scripts/slick.min.js'
    'scripts/rangeslider.min.js'
    'scripts/magnific-popup.min.js'
    'scripts/waypoints.min.js'
    'scripts/counterup.min.js'
    'scripts/jquery-ui.min.js'
    'scripts/tooltips.min.js'
    'scripts/custom.js' %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

<!-- Customs
================================================== -->
{% block javascripts %}{% endblock %}

</body>
</html>