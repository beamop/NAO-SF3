{% trans_default_domain 'FOSUserBundle' %}

<!-- Titlebar
    ================================================== -->
<div id="titlebar" class="gradient">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h2><i class="sl sl-icon-plus"></i> Changer le mot de passe</h2>

                <!-- Breadcrumbs -->
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="{{ path('nao_profile') }}">Profil</a></li>
                        <li>Changer le mot de passe</li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>

<!-- Content
    ================================================== -->

<!-- Container -->
<div class="container">

    <div class="col-lg-12 margin-bottom-50">

        <div id="add-listing" class="separated-form">

            <!-- Section -->
            <div class="add-listing-section">

                <!-- Headline -->
                <div class="add-listing-headline">
                    <h3><i class="sl sl-icon-doc"></i> Changer le mot de passe</h3>
                </div>

                <div class="row with-forms">
                    <div class="col-lg-12">

                        {{ form_start(form, { 'action': path('fos_user_change_password') }) }}
                            {{ form_widget(form) }}
                            <div>
                                <input type="submit" value="{{ 'change_password.submit'|trans }}" />
                            </div>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

