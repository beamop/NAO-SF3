{% block content %}
    <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="gradient">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <h2><i class="sl sl-icon-login"></i> Connexion</h2>

                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="#">Accueil</a></li>
                            <li>Connexion</li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>


    <!-- Content
    ================================================== -->

    <!-- Container -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12">

                {% if error %}
                    <div class="notification error closeable">
                        <p><span>Erreur!</span> {{ error.messageKey|trans(error.messageData, 'security') }}.</p>
                        <a class="close" href="#"></a>
                    </div>
                {% endif %}

                <div class="notification notice large margin-bottom-55">
                    <h4>Information ðŸ™‚</h4>
                    <p>N'hÃ©sitez pas Ã  contacter notre Ã©quipe si vous Ãªtes naturaliste.</p>
                </div>

                <div id="add-listing" class="separated-form">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <!-- Section -->
                        <div class="add-listing-section">

                            <!-- Headline -->
                            <div class="add-listing-headline">
                                <h3><i class="sl sl-icon-doc"></i> Informations de connexion</h3>
                            </div>

                            <!-- Nom d'utilisateur ou e-mail -->
                            <div class="row with-forms">
                                <div class="col-md-12">
                                    <h5>Nom d'utilisateur ou e-mail</h5>
                                    <input type="text" class="search-field" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                                </div>
                            </div>

                            <!-- Mot de passe -->
                            <div class="row with-forms">
                                <div class="col-md-12">
                                    <h5>Mot de passe</h5>
                                    <input type="password" class="search-field" id="password" name="_password" required="required" autocomplete="current-password" />
                                </div>
                            </div>
                            <ul class="share-buttons margin-bottom-0">
                                <li><a class="fb-share" href="{{ path('hwi_oauth_service_redirect', { 'service': 'facebook' }) }}"><i class="fa fa-facebook"></i> S'identifier avec Facebook</a></li>
                                <li><a class="gplus-share" href="{{ path('hwi_oauth_service_redirect', { 'service': 'google' }) }}"><i class="fa fa-google"></i> S'identifier avec Google</a></li>
                            </ul>
                        </div>
                        <!-- Section / End -->

                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Se connecter" style="margin: 25px 15px 25px 0;"/>
                    </form>
                </div>
            </div>

        </div>

    </div>
    <!-- Content / End -->
    <!-- Container / End -->
{% endblock %}